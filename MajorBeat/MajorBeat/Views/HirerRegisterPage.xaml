<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MajorBeat.Views.HirerRegisterPage"
             BackgroundColor="#4F1271">
    <ScrollView>
        <VerticalStackLayout>
            <Button  Text="Voltar"  HeightRequest="40" WidthRequest="100" CornerRadius="36" HorizontalOptions="Start" Margin="20,40,0,0"></Button>
           
            <Label Text="Criar sua conta" HorizontalTextAlignment="Center" FontSize="25" TextColor="#e7e7e7"></Label>
           <!--MUSICO OU CONTRATANTE (BOTÃO)-->

            <Grid>
                <RadioButton Content="Músico" GroupName="Músico" TextColor="#e7e7e7" IsChecked="True" HorizontalOptions="Start"  />
                <RadioButton Content="Contratante" GroupName="Contratante" TextColor="#e7e7e7" IsChecked="False" IsEnabled="False"  HorizontalOptions="End" Margin="0,0,100,0"  />
            </Grid>
            <Label Text="Nome Completo" TextColor="#e7e7e7" Margin="0,0,0,0" HorizontalTextAlignment="Center"></Label>
            <Entry Placeholder="Ex: Anderson Francisco Costa" BackgroundColor="#e7e7e7"></Entry>

            <Label Text="Email"></Label>
            <Entry Placeholder="Ex:anderson.francisco@gmail.com"></Entry>

            <Label Text="Telefone"></Label>
            <Grid>
                
                <Button Text="" WidthRequest="60" HorizontalOptions="Start" BackgroundColor="#e7e7e7" CornerRadius="10"></Button>
                <Border StrokeShape="RoundRectangle 10" BackgroundColor="#E7E7E7" WidthRequest="285">
                    <Entry Placeholder="Ex: (11) 95802-7781" HorizontalOptions="Center" Margin="0,0,149,0"></Entry>
                </Border>
                </Grid>

            
            <Label Text="Endereco" TextColor="#e7e7e7"></Label>

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Label Grid.Row="0" Text="Logradouro" TextColor="#e7e7e7" HorizontalTextAlignment="Start"></Label>
                <Entry Grid.Row="1" Placeholder="Ex: R.Alcântara" HorizontalOptions="Start"></Entry>

                <Label Grid.Row="0" Text="Número" HorizontalTextAlignment="End"></Label>
                <Entry Grid.Row="1" Placeholder="Ex:1234" HorizontalOptions="End"></Entry>
            </Grid>

            <Grid>
                <Label Text="CEP"></Label>
                <Entry Placeholder="Ex:23987501"></Entry>

                <Label Text="Bairro"></Label>
                <Entry Placeholder="Ex: Vila Maria Alta"></Entry>
            </Grid>

            <Grid>
                <Label Text="Cidade"></Label>
                <Entry Placeholder="Ex:Campinas"></Entry>

                <Label Text="UF"></Label>
                <Entry Placeholder="Ex:São Paulo"></Entry>
            </Grid>

            <Label Text="Senha"></Label>
            <Entry Placeholder="obr:Minimo 8 caracteres"></Entry>

            <Label Text=" Confirmar Senha"></Label>
            <Entry Placeholder="Confirme sua senha"></Entry>

            <Button Text="Criar Conta" Margin="0,70,0,0"></Button>

            <Label Text="Termos de Uso e Política de Privacidade" HorizontalOptions="Center" TextColor="#e7e7e7" Margin="0,20,0,0"></Label>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>